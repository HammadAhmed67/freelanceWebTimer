{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        <script src="{{ asset('js/myscript.js') }}"></script>
    {% endblock %}
    <div class="container mt-5">
        <h1> Edit Timelog</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.startTime, 'Start Time', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.endTime, 'End Time', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.project, 'Project', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.project, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.duration,{'attr': {'class' : 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary mt-2" onclick="editTime()">Save</button>
                {{ form_end(form) }}
            </div>

        </div>

    </div>
{% endblock %}